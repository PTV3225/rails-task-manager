<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<%= form_with model: @task do |f| %>
  <%= f.label :completed, "This task hasn't been completed" %>
  <%= f.check_box :completed %>
<% end %>

<p><%=link_to "Edit", edit_task_path%></p>
<p><%=link_to "Back to list", tasks_path%></p>
<p><%= link_to "Delete", delete_task_path(@task),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
